<%= layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <br><br>
            <h3>Create a New Listing</h3>
            <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-lable">Title</label>
                    <input name="listing[title]" placeholder="Add a catchy title" 
                    type="text" class="form-control" required>
                    <div class="valid-feedback">Title looks good</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-lable">Description</label>
                    <textarea name="listing[description]" placeholder="enter description"
                       required class="form-control"></textarea>
                       <div class="invalid-feedback">Please enter a short description</div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-lable">Upload Image</label>
                    <input name="listing[image]" type="file" class="form-control" required>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-lable">Price</label>
                        <input name="listing[price]" placeholder="1200"
                         class="form-control" required>
                         <div class="invalid-feedback">Price should be vaild</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-lable">Country</label>
                        <input name="listing[country]" placeholder="India" type="text"
                         class="form-control" required>
                         <div class="invalid-feedback">Country name should be vaild</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-lable">Location</label>
                    <input name="listing[location]" placeholder="Jaipur, Rajasthan"
                     type="text" class="form-control" required>
                     <div class="invalid-feedback">Location should be vaild</div>
                </div>

                <!-- âœ… ADD THIS CATEGORY DROPDOWN -->
                <div class="mb-3">
                    <label for="category" class="form-label">Category</label>
                    <select name="listing[category]" class="form-select" required>
                        <option value="">-- Select a Category --</option>
                        <% const categories = ["Trending", "Rooms", "Iconic Cities", "Mountains",
                        "Castles", "Amazing Pools", "Camping", "Farms", "Arctic", "Boats"]; %>
                        <% for(let cat of categories) { %>
                            <option value="<%= cat %>"><%= cat %></option>
                        <% } %>
                    </select>
                    <div class="invalid-feedback">Please select a category</div>
                </div>

                <button class="btn btn-dark add-btn mt-3">Add</button>
            </form>
        </div>
    </div>